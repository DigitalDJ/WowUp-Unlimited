{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "baseUrl": "",
    "types": []
  },
  "include": [
    "main.ts",
    "polyfills.ts",
    "app/**/*.ts",
    "common/**/*.ts",
    "environments/**/*.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "app/**/tests/*.ts",
    "app/**/utils/test.utils.ts",
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true
  }
}
